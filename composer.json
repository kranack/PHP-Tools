{
	"name": "kranack/php-tools",
	"description": "PHP Tools",
	"version": "0.3",
    "require-dev": {
		"phpunit/phpunit": "^9",
        "kranack/lint-tool": "dev-master-7.4",
        "mikey179/vfsstream": "^1.6",
        "codacy/coverage": "dev-master"
	},
	"require": {
		"php": "^7.4"
	},
	"scripts": {
		"lint-lib": "lint-tool lint -m ^7.4 lib --ansi",
		"lint-bin": "lint-tool lint -m ^7.4 bin --ansi",
		"lint": [ "@lint-lib", "@lint-bin" ],
        "test": [
            "@lint",
            "phpunit"
		],
		"coverage": [
			"@lint",
			"phpunit --coverage-clover build/logs/clover.xml"
		]
	},
	"autoload": {
		"psr-4": {
			"Tools\\": "lib/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tools\\Test\\": "tests/lib/"
		}
	}
}
